<h1> Listings </h1>

<% if policy(Listing).new? %>
    <p><%= link_to "New listing", new_listing_path %></p>
<% end %>
<p>
<% @listings.each do |listing| %>
<div id="shadowbox">
 <p> <%= listing.listingname %> </p>
 <p> <%= listing.gamename%> </p>
 <p>  <%= listing.genre %> </p>
  <p><%= listing.price %></p>
 
   <% if listing.users_id =/= current_user.id %>
   <%= link_to edit_listing_path(listing) %> 
     
      <% if admin? || author_of(listing) %>
    
      <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-sm btn-outlined btn-default" %>
      <%= link_to 'Delete', listing.delete, class: "btn btn-sm btn-outlined btn-default", data: { confirm: "Are you sure?" } %>

  <% end %>
  


